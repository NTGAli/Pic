<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:background="@color/neutral_800">


    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:cardCornerRadius="8dp">
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@color/neutral_800">
            <View
                android:id="@+id/color_view"
                android:layout_width="5dp"
                android:layout_height="60dp"
                android:layout_marginTop="8dp"
                android:layout_marginBottom="8dp"
                android:layout_marginStart="6dp"
                android:background="@drawable/left_shape_snack"/>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:layout_marginStart="18dp"
                android:layout_centerVertical="true"
                android:layout_alignStart="@id/color_view"
                >
                <TextView
                    android:id="@+id/txt_error_title"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/invalid_email"
                    android:textColor="@color/white"
                    android:textSize="16sp"
                    android:fontFamily="@font/outfit_black"/>

                <TextView
                    android:id="@+id/txt_error_massage"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/please_enter_a_valid_email"
                    android:textColor="@color/white"
                    android:layout_marginTop="2dp"
                    android:fontFamily="@font/outfit_regular"
                    android:textSize="14sp"/>
            </LinearLayout>
        </RelativeLayout>
    </androidx.cardview.widget.CardView>



</RelativeLayout>