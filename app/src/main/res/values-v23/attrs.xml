<?xml version="1.0" encoding="utf-8"?>
<resources>

    <declare-styleable name="DialView">
        <attr name="fanColor1" format="color" />
        <attr name="fanColor2" format="color" />
        <attr name="fanColor3" format="color" />
    </declare-styleable>

    <declare-styleable name="CustomBtn">
        <attr name="btn_text" format="string"/>
        <attr name="strokeWidthButton" format="dimension"/>

        <attr name="ButtonRadius" format="dimension"/>
        <attr name="ButtonTopRightRadius" format="dimension"/>
        <attr name="ButtonTopLeftRadius" format="dimension"/>
        <attr name="ButtonBottomRightRadius" format="dimension"/>
        <attr name="ButtonBottomLeftRadius" format="dimension"/>

        <attr name="sizee">
            <enum name="XL" value="1"/>
            <enum name="LG" value="2"/>
            <enum name="MD" value="3"/>
            <enum name="SM" value="4"/>
            <enum name="XS" value="5"/>
        </attr>



        <attr name="progressBar" format="boolean"/>


        <attr name="typee">
            <enum name="primary" value="0"/>
            <enum name="secondary" value="1"/>
            <enum name="success" value="2"/>
            <enum name="warning" value="3"/>
            <enum name="danger" value="4"/>
            <enum name="info" value="5"/>
        </attr>

        <attr name="BtnStylee">
            <enum name="contained" value="0"/>
            <enum name="outline" value="1"/>
            <enum name="textOnly" value="2"/>
        </attr>

        <attr name="textColor" format="color"/>
        <attr name="textSize" format="dimension"/>

    </declare-styleable>



    <declare-styleable name="CustomButton">

        <attr name="buttonText" format="string"/>

        <attr name="type">
            <enum name="primary" value="0"/>
            <enum name="secondary" value="1"/>
            <enum name="success" value="2"/>
            <enum name="warning" value="3"/>
            <enum name="danger" value="4"/>
            <enum name="info" value="5"/>
        </attr>

        <attr name="size">
            <enum name="XL" value="0"/>
            <enum name="LG" value="1"/>
            <enum name="MD" value="2"/>
            <enum name="SM" value="3"/>
            <enum name="XS" value="4"/>
        </attr>

        <attr name="buttonStyleType">
            <enum name="contained" value="0"/>
            <enum name="outline" value="1"/>
            <enum name="textOnly" value="2"/>
        </attr>

        <attr name="iconRight" format="reference"/>
        <attr name="iconLeft" format="reference"/>
        <attr name="icon" format="reference"/>

        <attr name="disabled" format="boolean"/>

        <attr name="enableProgress" format="boolean"/>

    </declare-styleable>

</resources>